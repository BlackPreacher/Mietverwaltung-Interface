<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:focusable="false">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typ"
            android:id="@+id/typ_view"
            android:focusable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/betrag_view"
            android:text="betrag"
            android:focusable="false"
            android:layout_marginStart="17dp"
            android:layout_alignTop="@+id/name_view"
            android:layout_toEndOf="@+id/typ_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/name_view"
            android:focusable="false"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/typ_view"
            android:layout_toEndOf="@+id/betrag_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Anlass"
            android:id="@+id/tv_anlass_listitem"
            android:layout_alignTop="@+id/name_view"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</LinearLayout>